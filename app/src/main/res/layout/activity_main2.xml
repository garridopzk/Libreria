<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/fondo"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingContraints" />

    <TextView
        android:id="@+id/hojaregistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoja de registro:"
        android:textSize="24sp"
        android:textColor="#F4F4F6"
        android:layout_marginTop="120dp"
        android:layout_marginStart="100dp"/>
    <EditText
        android:id="@+id/usuario"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="190dp"
        android:textColor="#00BCD4"
        android:hint="usuario"
        android:textColorHint="@color/white"
        android:inputType="text"/>
    <TextView
        android:id="@+id/Usuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textSize="24sp"
        android:textColor="#F4F4F6"
        android:layout_marginTop="260dp"
        android:layout_marginStart="40dp"/>

    <EditText
        android:id="@+id/contrase単a"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="190dp"
        android:textColor="#00BCD4"
        android:hint="contrase単a:"
        android:textColorHint="@color/white"/>
    <TextView
        android:id="@+id/Contrase単a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrase単a:"
        android:textSize="24sp"
        android:textColor="#F4F4F6"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/nombres"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="190dp"
        android:textColor="#00BCD4"
        android:hint="Nombre:"
        android:textColorHint="@color/white"
        android:inputType="text"
        tools:ignore="HardcodedText"
        android:autofillHints="" />
    <TextView
        android:id="@+id/Nombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="24sp"
        android:textColor="#F4F4F6"
        android:layout_marginTop="430dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono:"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginTop="500dp"/>
    <EditText
        android:id="@+id/cel"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="490dp"
        android:layout_marginStart="190dp"
        android:textColor="#03A9F4"
        android:hint="Celular:"
        android:textColorHint="@color/white"
        android:inputType="text"
        tools:ignore="HardcodedText"
        android:autofillHints="" />

    <Button
        android:id="@+id/inicio"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="120dp"
        android:text="Registrar" />

</RelativeLayout>