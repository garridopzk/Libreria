<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/color"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingContraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciencia Ficcion"
        android:textSize="24dp"
        android:textColor="#FF99FF"
        android:layout_marginStart="120dp"
        android:layout_marginTop="100dp"/>
    <ImageButton
        android:id="@+id/lavueltaalmundoen80dias"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/ciencia"/>
    <ImageButton
        android:id="@+id/viajealcentrodelatierra"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/cienciaficcion"/>
    <ImageButton
        android:id="@+id/delatierraalaluna"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/luna"/>


</RelativeLayout>